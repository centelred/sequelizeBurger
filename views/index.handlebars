<div class="jumbotron">
	<h1>Seven Dudes</h1>
</div>


<div id="left">
	<h2>Ready for cooking</h2>
		<ul>
			{{#each burgers}}
			{{#unless this.finished}}

	<h4>{{this.burger_name}}</h4>

		<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
		<input type="hidden" name="finished" value="true">
		<button type="submit">Grill it!</button>
		</form>

		{{/unless}}
		{{/each}}

		</ul>
</div>


<div id="right">
	<h2>Finished</h2>

		<ul>
		{{#each burgers}}
		{{#if this.finished}}

	<h4>{{this.burger_name}}</h4>

		<form action="burgers/update{{this.id}}?_method=PUT" method="POST">
		<input type="hidden" name="finished" value="false">
		<button type="submit">Toss the patty</button>
		</form>

			{{/if}}
				{{/each}}

		</ul>
</div>


<div id="bot">
	<h2>Add a burger</h2>

		<form class="create-update-form" action="burgers/create" method="POST">

		<div class="form-group">
			<label for="burg">Burger type:</label>
			<input type="text" id="burger" name="burger_name">
		</div>

		<div class="form-group">
			<label for="finished">Is it ready?</label><br>
			<input type="radio" name="finished" value="1"> GRILLED <br>
			<input type="radio" name="finished" value="0">Needs Grillin!
		</div>

			<button type="submit">Add it!</button>
			
		</form>
</div